<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_8dp"
    card_view:cardCornerRadius="@dimen/dim_5dp">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_book_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/rounded_boys_girls"
            android:ellipsize="end"
            android:maxLines="1"
            android:padding="@dimen/dim_5dp"
            android:text="25/10/2020"
            android:textColor="@color/white"
            android:textSize="@dimen/dim_text14" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Name : Chirag Gandhi"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text16"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_property_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Hotel Dreamland Lonavala"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="(3 Sharing)"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text16" />


        <TextView
            android:id="@+id/tv_lbl_booking_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:layout_marginBottom="@dimen/dim_5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/booking_dates"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_booking_dates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="25/10/2020 - 30/11/2020"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text14" />

        <TextView
            android:id="@+id/tv_lbl_documents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:text="@string/documents"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/dim_text14"
            android:textStyle="bold" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_document"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_8dp"
            android:layout_marginTop="@dimen/dim_2dp"
            android:layout_marginRight="@dimen/dim_8dp"
            android:nestedScrollingEnabled="false" />

        <LinearLayout
            android:id="@+id/ll_rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5dp"
            android:layout_marginRight="@dimen/dim_5dp">

            <TextView
                android:id="@+id/tv_lbl_rent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_weight="1"
                android:text="@string/rent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text15" />

            <TextView
                android:id="@+id/tv_rent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_5dp"
                android:text="₹"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_text15"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_0_5_dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:background="@color/border_gray" />

        <LinearLayout
            android:id="@+id/ll_coupon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5dp">

            <TextView
                android:id="@+id/tv_lbl_coupon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_weight="1"
                android:text="@string/coupon"
                android:textColor="@color/high_check"
                android:textSize="@dimen/dim_text15" />

            <TextView
                android:id="@+id/tv_coupon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_5dp"
                android:text=" ₹ "
                android:textColor="@color/high_check"
                android:textSize="@dimen/dim_text15"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/vw_coupon"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_0_5_dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:background="@color/border_gray" />

        <LinearLayout
            android:id="@+id/ll_wallet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5dp">

            <TextView
                android:id="@+id/tv_lbl_wallet"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_weight="1"
                android:text="@string/wallet"
                android:textColor="@color/high_check"
                android:textSize="@dimen/dim_text15" />

            <TextView
                android:id="@+id/tv_wallet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dim_5dp"
                android:text=" ₹ "
                android:textColor="@color/high_check"
                android:textSize="@dimen/dim_text15"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/vw_wallet"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_0_5_dp"
            android:layout_marginTop="@dimen/dim_5dp"
            android:background="@color/border_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_5dp">

            <TextView
                android:id="@+id/tv_lbl_amount_payable"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_weight="1"
                android:text="@string/amount_payable"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text15" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/rounded_total_price"
                android:paddingLeft="@dimen/dim_8dp"
                android:paddingTop="@dimen/dim_3dp"
                android:paddingRight="@dimen/dim_8dp"
                android:paddingBottom="@dimen/dim_3dp"
                android:text="₹ 75000"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_text14"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
