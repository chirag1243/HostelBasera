<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        cardCornerRadius="@dimen/dim_8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dim_2dp"
        android:layout_marginBottom="@dimen/dim_3dp"
        android:layout_marginLeft="@dimen/dim_15dp"
        android:layout_marginRight="@dimen/dim_15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dim_12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Chirag Gandhi"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/dim_text13"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_rating"
                    android:padding="@dimen/dim_5dp"
                    android:text="4 / 5"
                    android:textColor="@color/white"
                    android:textSize="@dimen/dim_text12"
                    android:textStyle="bold" />
            </LinearLayout>


            <TextView
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Awesome Hostel"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text12" />

            <TextView
                android:id="@+id/tv_review_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Aug 15, 2018"
                android:textColor="@color/border_gray"
                android:textSize="@dimen/dim_text12" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>