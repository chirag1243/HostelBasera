<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_3dp"
        android:layout_marginTop="@dimen/dim_5dp"
        android:layout_marginRight="@dimen/dim_8dp"
        android:layout_marginBottom="@dimen/dim_8dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dim_2dp"
            android:layout_marginTop="@dimen/dim_2dp"
            android:layout_marginRight="@dimen/dim_2dp"
            android:layout_marginBottom="@dimen/dim_3dp"
            card_view:cardCornerRadius="@dimen/dim_5dp">

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/enter_contact"
                android:layout_marginRight="@dimen/dim_25dp"
                android:padding="@dimen/dim_5dp"
                android:textSize="@dimen/dim_text14" />

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="@dimen/dim_5dp"
                android:src="@drawable/footer_edit" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <TextView
        android:id="@+id/tv_remove"
        android:layout_width="@dimen/dim_18dp"
        android:layout_height="@dimen/dim_18dp"
        android:layout_gravity="end"
        android:background="@drawable/rounded_close"
        android:gravity="center"
        android:paddingBottom="@dimen/dim_2dp"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="@dimen/dim_text12" />

</FrameLayout>