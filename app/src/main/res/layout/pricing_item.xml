<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dim_10dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dim_3dp"
        android:layout_marginTop="@dimen/dim_3dp"
        android:layout_marginRight="@dimen/dim_3dp"
        android:layout_marginBottom="@dimen/dim_5dp"
        android:padding="@dimen/dim_2dp"
        app:cardCornerRadius="@dimen/dim_3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_10dp"
                    android:text="First Plan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/dim_15dp"
                    android:layout_marginBottom="@dimen/dim_15dp"
                    android:text="â‚¹ 1800"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/text_size_xxxlarge"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_10dp"
                android:padding="@dimen/dim_8dp"
                android:text="First Plan description"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text16" />

            <TextView
                android:id="@+id/btn_buy_now"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dim_20dp"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:background="@drawable/rounded_buy_now_button"
                android:paddingLeft="@dimen/dim_20dp"
                android:paddingTop="@dimen/dim_10dp"
                android:paddingRight="@dimen/dim_20dp"
                android:paddingBottom="@dimen/dim_10dp"
                android:text="@string/buy_now"
                android:textAllCaps="true"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/dim_text16"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>