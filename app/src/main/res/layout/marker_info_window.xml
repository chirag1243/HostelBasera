<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="@dimen/dim_5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="@dimen/dim_70dp"
                android:layout_height="wrap_content"
                android:text="Abcsdfsds dfdfdfdff"
                android:gravity="center"
                android:maxLines="2"
                android:minLines="2"
                android:ellipsize="end"
                android:padding="@dimen/dim_8dp"
                android:textSize="@dimen/dim_text11"
                android:textColor="@color/white"/>

            <ImageView
                android:id="@+id/img_hostel"
                android:layout_width="@dimen/dim_70dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/signup_bg"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>