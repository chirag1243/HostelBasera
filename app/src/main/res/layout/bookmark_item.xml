<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/home_bg"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dim_8dp"
        card_view:cardCornerRadius="@dimen/dim_5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_150dp"
                    android:layout_marginBottom="@dimen/dim_15dp"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop"
                    android:src="@drawable/image17" />

                <ImageView
                    android:id="@+id/img_place_holder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:src="@drawable/logo"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/img_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:background="@drawable/rounded_hostel_list_bg"
                    android:src="@drawable/ic_delete" />

                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dim_2dp"
                    android:layout_marginLeft="@dimen/dim_5dp"
                    card_view:cardCornerRadius="@dimen/dim_5dp"
                    android:layout_gravity="bottom">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/dim_5dp"
                        android:text="â‚¹ 1500"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/dim_text16"
                        android:textStyle="bold" />
                </android.support.v7.widget.CardView>

            </FrameLayout>


            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Hotel Dreamland Lonavala"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text16" />

            <RatingBar
                android:id="@+id/simpleRatingBar"
                style="@style/customRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dim_10dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:numStars="5"
                android:rating="2.5" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/dim_10dp"
                android:layout_marginLeft="@dimen/dim_5dp"
                android:layout_marginTop="@dimen/dim_5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Lonavala"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/dim_text14" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <View
        android:id="@+id/vw_bottom_border"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_0_5_dp"
        android:visibility="gone"
        android:background="@color/border_gray" />
</LinearLayout>